<% if logged_in? %>
  <h3 class="text-center">投稿された本の一覧</h3>
  <div class="row">
    <div class="col-sm-6">
      <%= render 'books/books', books: @books %> <!--オリジナル課題専用-->
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>読んだ本をみんなに共有しよう！</h1>
      <%= link_to '会員登録', signup_path, class: 'btn btn-lg btn-primary' %>　<!--オリジナル課題専用-->
    </div>
  </div>
<% end %>