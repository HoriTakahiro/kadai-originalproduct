<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
            <p>投稿数：〇〇件/コメント数：〇〇数</p>　<!--オリジナル課題専用-->
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %> <!--ページネーション-->
<% end %>